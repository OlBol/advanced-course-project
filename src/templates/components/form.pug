#form.form
    .container
        h2.form__title.title Связаться со мной
        form.form__block.j-form(action='https://webdev-api.loftschool.com/sendmail' method='POST')
            .form__wrap.form__wrap--name
                label.form__label.form__label--name(for='name')
                    span.form__label-text.js-label-text Введите имя
                    +icon('avatar', 'form__icon form__icon--name')
                input#name.form__input.js-input(type='text' name='name')
                .form__error
            .form__wrap.form__wrap--email
                label.form__label.form__label--email(for='email')
                    span.form__label-text.js-label-text Введите email
                    +icon('email', 'form__icon form__icon--email')
                input#email.form__input.js-input(type='email' name='email')
                .form__error
            .form__wrap.form__wrap--phone
                label.form__label.form__label--phone(for='phone')
                    span.form__label-text.js-label-text Введите номер телефона
                    +icon('avatar', 'form__icon form__icon--name')
                input#phone.form__input.js-input(type='tel' name='phone')
                .form__error
            .form__wrap.form__wrap--text
                label.form__label.form__label--text(for='message')
                    span.form__label-text.js-label-text Сообщение к письму
                    +icon('chat', 'form__icon form__icon--text')
                textarea#message.form__input.form__input--text.js-input(name='message' rows='1')
                .form__error
            button.form__btn.js-submit(type='submit') Отправить
