.popup-menu {
    display: none;
    padding: 60px;
    position: fixed;
    top: 0;
    left: 0;
    height: 100vh;
    width: 100vw;
    background-color: $white-color;

    &.is-open {
        display: flex;
        flex-direction: column;
        justify-content: center;
    }

    &__menu {
        margin-bottom: 30px;
    }
}
